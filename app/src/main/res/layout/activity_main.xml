<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_main"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:navigationIcon="@drawable/ic_menu_white_24dp"
            app:title="@string/app_name"
            app:titleTextColor="@color/white">

        </android.support.v7.widget.Toolbar>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start|left"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/ivSongPic"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/accent"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tvSongName"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="@dimen/padding_margin_20dp"
                android:layout_marginLeft="@dimen/padding_margin_10dp"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/tvSongAuthor"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="@dimen/padding_margin_5dp"
                android:layout_marginLeft="@dimen/padding_margin_10dp"
                android:text="@string/app_name" />
        </FrameLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
